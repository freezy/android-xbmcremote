<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox__top_left"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnDisplay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_display"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox__top_right"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/RemoteXboxImgBtnSeekBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_seek_back"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnPlay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_play"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnSeekForward"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_seek_forward"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/RemoteXboxImgBtnPrevious"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_previous"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnStop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_stop"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnPause"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_pause"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_next"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/RemoteXboxImgBtnTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_title"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnUp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_up"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnInfo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_info"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/RemoteXboxImgBtnLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_left"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnSelect"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_select"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnRight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_right"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/RemoteXboxImgBtnMenu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_menu"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnDown"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_down"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/remote_xbox_back"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>
</LinearLayout>