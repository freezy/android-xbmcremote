<LinearLayout
	android:id="@+id/SlidingTabLinearLayoutOuter"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="60dip"
	android:background="@drawable/st_background"
	android:orientation="vertical">

	<org.xbmc.android.widget.slidingtabs.SlidingTabScrollView
		android:id="@+id/SlidingTabHorizontalScrollView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="6dip"
		android:clickable="false"
		android:fadingEdge="none"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:isScrollContainer="true"
		android:longClickable="false"
		android:scrollbars="none">

		<LinearLayout
			android:id="@+id/SlidingTabLinearLayoutBackslider"
			android:layout_width="wrap_content"
			android:layout_height="48dip"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="1dip"/>
	</org.xbmc.android.widget.slidingtabs.SlidingTabScrollView>

	<LinearLayout
		android:id="@+id/SlidingTabLinearLayoutSlidingContainer"
		android:layout_width="1000dip"
		android:layout_height="wrap_content"
		android:layout_marginLeft="-19dip"
		android:layout_marginTop="-49dip">

		<ImageButton
			android:id="@+id/SlidingTabImageButtonSlider"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/st_slider"
			android:isScrollContainer="true"/>
	</LinearLayout>
</LinearLayout>