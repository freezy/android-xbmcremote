<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/setup_wizard_login"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="15dip">

	<TextView
		android:id="@+id/TextView01"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="25dip"
		android:text="@string/setup_wizard_username"></TextView>

	<EditText
		android:id="@+id/setup_wizard_username"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="xbmc"></EditText>

	<TextView
		android:id="@+id/TextView02"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/setup_wizard_password"></TextView>

	<EditText
		android:id="@+id/setup_wizard_password"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="textPassword|textVisiblePassword"
		android:text="xbmc"></EditText>

	<TextView
		android:id="@+id/setup_page_login_msg"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="25dip"
		android:text=''></TextView>

</LinearLayout>