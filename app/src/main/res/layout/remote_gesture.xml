<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/remoteLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/RemoteXboxRow1"
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_alignParentTop="true"
		android:layout_weight="60">

		<ImageView
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_weight="93"
			android:background="@drawable/remote_xbox__top_left"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnDisplay"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_centerHorizontal="false"
			android:layout_centerInParent="true"
			android:layout_weight="136"
			android:background="@drawable/remote_xbox_display"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<ImageView
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:layout_weight="91"
			android:background="@drawable/remote_xbox__top_right"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/RemoteXboxRow3"
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="70">

		<Button
			android:id="@+id/RemoteXboxImgBtnSeekBack"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_weight="114"
			android:background="@drawable/remote_xbox_seek_back"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnPlay"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_centerInParent="true"
			android:layout_weight="91"
			android:background="@drawable/remote_xbox_play"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnSeekForward"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:layout_weight="115"
			android:background="@drawable/remote_xbox_seek_forward"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/RemoteXboxRow4"
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="80">

		<Button
			android:id="@+id/RemoteXboxImgBtnPrevious"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="96"
			android:background="@drawable/remote_xbox_previous"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnStop"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="64"
			android:background="@drawable/remote_xbox_stop"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnPause"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="65"
			android:background="@drawable/remote_xbox_pause"
			android:focusable="false"
			android:focusableInTouchMode="false"/>

		<Button
			android:id="@+id/RemoteXboxImgBtnNext"
			android:layout_width="0px"
			android:layout_height="fill_parent"
			android:layout_weight="95"
			android:background="@drawable/remote_xbox_next"
			android:focusable="false"
			android:focusableInTouchMode="false"/>
	</LinearLayout>

	<org.xbmc.android.widget.gestureremote.GestureRemoteView
		android:id="@+id/RemoteXboxGestureZone"
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="270"/>
</LinearLayout>
