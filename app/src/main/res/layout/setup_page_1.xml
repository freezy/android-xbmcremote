<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/setup_wizard_page1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="15dip">

	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/setup_wizard_hostname"></TextView>

	<EditText
		android:id="@+id/setup_wizard_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<requestFocus></requestFocus>
	</EditText>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/setup_wizard_ip_host"></TextView>

	<EditText
		android:id="@+id/setup_wizard_ip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="text"></EditText>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/setup_wizard_port"></TextView>

	<EditText
		android:id="@+id/setup_wizard_port"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="number|numberSigned"
		android:text="8080"></EditText>

	<TextView
		android:id="@+id/setup_wizard_host_msg"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="25dip"
		android:text=''></TextView>

</LinearLayout>
