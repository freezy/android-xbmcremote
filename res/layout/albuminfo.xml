<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/albuminfo" android:orientation="vertical"
	android:layout_height="fill_parent"
	android:padding="10dp" android:layout_width="250px">
	<LinearLayout android:id="@+id/LinearLayoutTop" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginBottom="5pt">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/album_artistname"
			android:text="Artist" android:textStyle="bold"></TextView>
		<TextView android:text="Year" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/album_year"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/LinearLayoutMiddle" android:layout_marginBottom="5dp" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_gravity="center_horizontal">
		<ImageView android:src="@drawable/nocover"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/album_cover" android:scaleType="fitCenter"/>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/LinearLayoutInfo" android:layout_marginBottom="5px" android:layout_width="fill_parent">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Genre" android:id="@+id/album_genres"
			android:textStyle="italic"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/LinearLayoutBottom"
		android:layout_weight="1" android:layout_gravity="bottom|center_horizontal">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/album_queuebutton"
			android:text="Queue"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Play"
			android:id="@+id/album_playbutton"></Button>

	</LinearLayout>        	       
</LinearLayout>