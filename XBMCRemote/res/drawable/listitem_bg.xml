<selector android:id="@+id/listitem_bgcolor" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_selected="false" android:drawable="@color/listitem_back" />
    <item android:state_pressed="false" android:state_selected="true" android:drawable="@color/listitem_back_selected" />

